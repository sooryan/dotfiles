[module/mpd]
type = internal/mpd
format-prefix = " "
format-prefix-foreground = ${colors.blue}
label = %output:0:45:...%
click-left = playerctl previous
click-middle = playerctl play-pause
click-right = playerctl next


[module/network]
type = internal/network
interface = wlo1
ping-interval = 3

[module/music]
type = custom/script
interval = 2

format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.blue}
label = %output:0:45:...%

exec = ~/.config/polybar/mpris.sh
